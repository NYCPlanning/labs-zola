<button
  class="save-button bookmark-save-button hide-for-print {{if saved "saved"}}"
  onclick={{action "toggleSaved"}}
  data-test-bookmark="save"
  data-test-bookmark-button-saved={{if saved "true" "false"}} type="button"
>
  <FaIcon @icon="bookmark" />
  <span class="state">
    {{#if saved}}
      SAVED
    {{/if}}
  </span>
</button>
{{yield}}