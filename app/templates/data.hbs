<div class="content-close-button-container">
  <LinkTo @route="index" class="close-button">
    <span aria-hidden="true">
      &times;
    </span>
  </LinkTo>
</div>
<div class="content-area cell large-5 large-cell-block-y xxlarge-4">
  <h1>
    Data Sources
  </h1>
  <ul>
    {{#each this.model as |layerGroup|}}
      <li>
        <p>
          {{#if layerGroup.meta.description}}
            <span style="display:block;" class="dark-gray">
              <strong>
                {{layerGroup.meta.description}}
              </strong>
            </span>
          {{/if}}
          {{#if layerGroup.meta.url}}
            {{#each layerGroup.meta.url as |url|}}
              <span style="display:block;" class="no-margin">
                <a href="{{url}}" target="_blank" rel="noopener noreferrer">
                  {{fa-icon icon="external-link-alt"}}
                  {{url}}
                </a>
              </span>
            {{/each}}
          {{/if}}
          {{#if layerGroup.meta.updated_at}}
            <span style="display:block;" class="dark-gray text-small">
              Updated in ZoLa:
              {{layerGroup.meta.updated_at}}
            </span>
          {{/if}}
        </p>
      </li>
    {{/each}}
  </ul>
  <p>
    For more information on the licenses which govern OpenStreetMap, please refer to
    <a href="www.openstreetmap.org/copyright">
      www.openstreetmap.org/copyright
    </a>
  </p>
  {{outlet}}
</div>